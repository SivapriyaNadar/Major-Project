<% layout("/layouts/boilerplate") %>
<div id="filters">
    <div class="filter">
        <a href="/listings" class="filter-link">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/category?category=Rooms" class="filter-link">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/category?category=IconicCity" class="filter-link">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/category?category=Mountains" class="filter-link">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/category?category=Pools" class="filter-link">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/category?category=Camp" class="filter-link">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/category?category=Farms" class="filter-link">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/category?category=Arctic" class="filter-link">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/category?category=Boats" class="filter-link">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/category?category=Beach" class="filter-link">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
        </a>
    </div>

    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display price with tax</label>
        </div>
    </div>
</div>

    
    <div class="row row-cols-lg-4 row row-cols-md-3 row row-cols-sm-3 row row-cols-2 mt-3">
        <% if(allListings.length <= 0) { %>
            <div class="mt-5 col-2 offset-4">
                <h3 style="opacity: 0.5;"><b><i class="fa-regular fa-face-frown"></i> No listing available.</b></h3>
            </div>
        <% } %>
        <% for(listing of allListings){ %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card listing-card col">
            <img 
            src="<%= listing.image.url %>" 
            class="card-img-top" 
            alt="listing_img" 
            style="height:15rem;">

            <div class="card-img-overlay"></div>
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b><br>
                    &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                    <i class="tax-info">&nbsp;&nbsp; +18% GST</i>
                </p>
            </div>
        </div>
        </a>
        <% } %>
    </div>
    <br>

<script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo= document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display != "inline"){
                info.style.display = "inline";
            }else{
                info.style.display = "none";
            }
        }
    }); 
</script>
